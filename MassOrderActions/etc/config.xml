<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpmassorderactions>
            <general>
                <enabled>1</enabled>
                <actions>1,2,3,4,5</actions>
                <different_state>0</different_state>
                <tracking_carrier_default>custom</tracking_carrier_default>
            </general>
            <invoice_action>
                <default_status>0</default_status>
                <notify_customer>1</notify_customer>
            </invoice_action>
            <shipment_action>
                <default_status>0</default_status>
                <notify_customer>1</notify_customer>
                <load_tracking>1</load_tracking>
            </shipment_action>
        </mpmassorderactions>
    </default>
</config>
